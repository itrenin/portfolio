include ./common/_mixins
block variables

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    
    title Portfolio | #{title}
    link(rel='stylesheet' href='main.min.css')
  body
    include ./pages/preloader.pug
    .wrapper
      .maincontent
        ul.header__fullscreen-menu
          each menuItem in ['Мои работы', 'Блог', 'Обо мне', 'Авторизация']
            li.fullscreen-menu__item
              .marked
                +page(menuItem)
        block content
      
      include ./common/footer.pug
      include ./components/entry.pug
    script(src='test.bundle.js')
    script(src='bootloader.bundle.js')
    script(src='vendor.bundle.js')
    script(src='skills.bundle.js')
    script(src='slider.bundle.js')
    script(src='parallax.bundle.js')
    
    
    block scripts
    script(src = 'hamburger.bundle.js')
