  .wrapper
    section.welcome
      .welcome__parallax
        .parallax__layer
           +image('welcome/01.png', '', 'welcome__parallax-img')
        .parallax__layer
           +image('welcome/02.png', '', 'welcome__parallax-img')
        .parallax__layer
           +image('welcome/03.png', '', 'welcome__parallax-img')
        //- .parallax__layer
        //-    +image('welcome/04_clouds.png', '', 'welcome__parallax-img')
        .parallax__layer
           +image('welcome/05.png', '', 'welcome__parallax-img')
        .parallax__layer
           +image('welcome/06.png', '', 'welcome__parallax-img')
        //- .parallax__layer
        //-    +image('welcome/07_clouds.png', '', 'welcome__parallax-img')
